pipeline {
    agent none
    stages {
        stage('Clone Repository') {
            agent any
            steps {
                git branch: 'main', credentialsId: 'SCEProject', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team32.git'
            }
        }
        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    docker.build('mathgenius', '-f Dockerfile .')
                }
            }
        }
        stage('Run Docker Container') {
            agent any
            steps {
                script {
                    // Stop and remove any existing container
                    sh 'docker rm -f mathgenius_container || true'
                    // Run the new container in detached mode
                    sh 'docker run -d --name mathgenius_container mathgenius'
                }
            }
        }
        stage('Run Tests') {
            agent {
                docker {
                    image 'mathgenius'
                    args '-u root'  // Running as root to avoid permission issues
                }
            }
            steps {
                sh 'pytest --verbose --junit-xml=test-reports/results.xml sources/test_calc.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
    post {
        always {
            script {
                // Cleanup: stop and remove the container
                sh 'docker rm -f mathgenius_container || true'
            }
        }
    }
}