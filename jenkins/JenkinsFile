pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', credentialsId: 'SCEProject', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team32.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t mathgenius .'
            }
        }
        stage('Run Docker Container') {
            steps {
                echo 'Running Docker container...'
                // Remove the container if it already exists
                sh 'docker rm -f mathgenius_container || true'
                // Run the Docker container
                sh 'docker run -d -p 5000:5000 --name mathgenius_container mathgenius'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'docker exec mathgenius_container pytest --verbose --junit-xml=test-reports/results.xml sources/test_calc.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
    post {
        always {
            steps {
                echo 'Cleaning up Docker container...'
                sh 'docker rm -f mathgenius_container || true'
            }
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}

