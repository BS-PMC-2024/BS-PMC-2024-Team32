pipeline {
    agent none
    stages {
        stage('Clone Repository') {
            agent any
            steps {
                git branch: 'main', credentialsId: 'SCEProject', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team32.git'
            }
        }
        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t mathgenius .'
                }
            }
        }
        stage('Run Docker Container') {
            agent any
            steps {
                script {
                    // Stop and remove any existing container
                    sh 'docker rm -f mathgenius_container || true'
                    // Run the new container
                    sh 'docker run -d -p 5000:5000 --name mathgenius_container mathgenius'
                }
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python:3.10-slim'  // Use the same image for testing
                    args '-u root'  // Running as root to avoid permission issues
                }
            }
            steps {
                sh 'pip install --upgrade pip'  // Ensure pip is up-to-date
                sh 'pip install --no-cache-dir pytest'  // Install pytest
                sh 'pip install --no-cache-dir -r requirements.txt'
                sh 'pytest --verbose --junit-xml=test-reports/results.xml sources/test_calc.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
    post {
        always {
            // Clean up the Docker container
            agent any
            steps {
                script {
                    sh 'docker rm -f mathgenius_container || true'
                }
            }
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
