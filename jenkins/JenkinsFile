pipeline {
    agent none
    stages {
        stage('Clone Repository') {
            agent any
            steps {
                git branch: 'main', credentialsId: 'SCEProject', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team32.git'
            }
        }
        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    def app = docker.build("mathgenius")
                }
            }
        }
        stage('Run Docker Container') {
            agent any
            steps {
                script {
                    // Stop and remove the existing container if it exists
                    sh 'docker stop mathgenius_container || true'
                    sh 'docker rm mathgenius_container || true'

                    // Run the new container
                    sh 'docker run -d -p 5000:5000 --name mathgenius_container mathgenius'
                }
            }
        }
    }
}


