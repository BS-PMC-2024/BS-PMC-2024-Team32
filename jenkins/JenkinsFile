pipeline {
    agent none
    stages {
        stage('Clone Repository') {
            agent any
            steps {
                git branch: 'main', credentialsId: 'SCEProject', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team32.git'
            }
        }
        stage('Verify Environment') {
            agent {
                docker {
                    image 'python:3.10-slim'
                    args '-u root'  // Running as root to avoid permission issues
                }
            }
            steps {
                sh 'pip install --upgrade pip'  // Upgrade pip to the latest version
                sh 'pip --version'  // Print pip version
                sh 'pip install blinker'  // Install blinker explicitly
                sh 'python -m pip show blinker'  // Print blinker version
                sh 'ping -c 3 pypi.org'  // Check network connectivity to PyPI
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'python:3.10-slim'
                    args '-u root'  // Running as root to avoid permission issues
                }
            }
            steps {
                sh 'pip install --upgrade pip'  // Ensure pip is up-to-date
                sh 'pip install --no-cache-dir -r requirements.txt'
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                    args '-u root'  // Running as root to avoid permission issues
                }
            }
            steps {
                sh 'pip install --upgrade pip'  // Ensure pip is up-to-date
                sh 'pip install --no-cache-dir -r requirements.txt'
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}
