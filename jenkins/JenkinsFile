pipeline {
    agent any
    triggers {
    githubPush()
}
    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', credentialsId: 'SCEProject', url: 'https://github.com/BS-PMC-2024/BS-PMC-2024-Team32.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t mathgenius .'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh '''
                    docker run --rm \
                    -e FLASK_ENV=testing \
                    mathgenius \
                    pytest --verbose --junit-xml=test-reports/results.xml tests/
                '''
            }
            post {
                always {
                    sh 'docker cp $(docker ps -lq):/app/test-reports/results.xml test-reports/results.xml || true'
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}

